<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sección: Apps del Dock -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apps_dock_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dock_apps_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp" />

        <Button
            android:id="@+id/add_app_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_app_button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Sección: Configuración -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="@string/dock_config_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Posición inicial (full width) -->
        <TextView
            android:id="@+id/position_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_label"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/position_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <!-- Toggle Draggable (full width) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:padding="8dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dock_draggable_label"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/dock_draggable_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Controles en dos columnas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <!-- Color de fondo -->
                <TextView
                    android:id="@+id/background_color_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background_color_label"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/background_color_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/hint_color_hex"
                    android:padding="8dp" />

                <!-- Alpha de fondo -->
                <TextView
                    android:id="@+id/background_alpha_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background_alpha_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/background_alpha_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Tamaño del icono -->
                <TextView
                    android:id="@+id/icon_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_size_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/icon_size_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Border radius -->
                <TextView
                    android:id="@+id/border_radius_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/border_radius_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/border_radius_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Margen de posición X -->
                <TextView
                    android:id="@+id/position_margin_x_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_margin_x_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/position_margin_x_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Dock Behavior -->
                <TextView
                    android:id="@+id/dock_behavior_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dock_behavior_label"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />
                
                <Spinner
                    android:id="@+id/dock_behavior_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- Color de iconos -->
                <TextView
                    android:id="@+id/icon_color_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_color_label"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/icon_color_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/hint_icon_color_hex"
                    android:padding="8dp" />

                <!-- Alpha de iconos -->
                <TextView
                    android:id="@+id/icon_alpha_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_alpha_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/icon_alpha_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Padding de iconos -->
                <TextView
                    android:id="@+id/icon_padding_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_padding_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/icon_padding_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Gap entre iconos -->
                <TextView
                    android:id="@+id/icon_gap_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_gap_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/icon_gap_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Margen de posición Y -->
                <TextView
                    android:id="@+id/position_margin_y_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_margin_y_label"
                    android:layout_marginTop="8dp" />

                <include
                    android:id="@+id/position_margin_y_container"
                    layout="@layout/number_input_with_controls" />

                <!-- Hide Timeout (solo visible cuando "Hide after time" está seleccionado) -->
                <LinearLayout
                    android:id="@+id/hide_timeout_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hide_timeout_label"
                        android:layout_marginTop="8dp" />
                    
                    <include
                        android:id="@+id/hide_timeout_container_input"
                        layout="@layout/number_input_with_controls" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Botones -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_config_button"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/start_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_service_button"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/check_updates_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_updates"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
