<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#E0000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:minWidth="280dp">

        <ImageView
            android:id="@+id/slider_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Icono del slider" />

        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Track de fondo -->
            <View
                android:id="@+id/slider_track"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical"
                android:background="#33FFFFFF" />

            <!-- Track lleno (progreso) -->
            <View
                android:id="@+id/slider_track_filled"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical|start"
                android:background="#FFFFFF" />

            <!-- Thumb (indicador) -->
            <View
                android:id="@+id/slider_thumb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/slider_thumb" />

        </FrameLayout>

        <TextView
            android:id="@+id/slider_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

